<?xml version="1.0"?>
<config>
	<modules>
		<Fishpig_AttributeSplash_Addon_QuickCreate>
			<version>1.0.4.0</version>
		</Fishpig_AttributeSplash_Addon_QuickCreate>
	</modules>
	<global>
		<blocks>
			<attributeSplash_addon_quickcreate>
				<class>Fishpig_AttributeSplash_Addon_QuickCreate_Block</class>
			</attributeSplash_addon_quickcreate>
		</blocks>
		<helpers>
			<attributeSplash_addon_quickcreate>
				<class>Fishpig_AttributeSplash_Addon_QuickCreate_Helper</class>
			</attributeSplash_addon_quickcreate>
		</helpers>
	</global>
	<adminhtml>
		<events>
			<attributesplash_dashboard_tabs_prepare_layout>
				<observers>
					<attributeSplash_quickcreate>
						<type>singleton</type>
						<class>Fishpig_AttributeSplash_Addon_QuickCreate_Model_Observer</class>
						<method>injectQuickCreateTabObserver</method>
					</attributeSplash_quickcreate>
				</observers>
			</attributesplash_dashboard_tabs_prepare_layout>
		</events>
	</adminhtml>
	<default>
		<attributeSplash>
			<missing_addon>
				<quickcreate>0</quickcreate>
			</missing_addon>
		</attributeSplash>
	</default>
</config>