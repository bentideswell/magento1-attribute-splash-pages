<?xml version="1.0"?>
<config>
	<modules>
		<Fishpig_AttributeSplash_Addon_XmlSitemap>
			<version>1.2.0.0</version>
		</Fishpig_AttributeSplash_Addon_XmlSitemap>
	</modules>
	<global>
		<models>
			<sitemap>
				<rewrite>
					<sitemap>Fishpig_AttributeSplash_Addon_XmlSitemap_Model_Sitemap_Sitemap</sitemap>
				</rewrite>
			</sitemap>
		</models>
		<events>
            <sitemap_sitemap_save_before>
                <observers>
					<attributesplash_addon_xmlsitemap>
						<type>singleton</type>
						<class>Fishpig_AttributeSplash_Addon_XmlSitemap_Model_Observer</class>
						<method>injectXmlSitemapLinksObserver</method>
					</attributesplash_addon_xmlsitemap>
                </observers>
            </sitemap_sitemap_save_before>
		</events>
	</global>
	<adminhtml>
		<events>
			<attributesplash_dashboard_tabs_prepare_layout>
				<observers>
					<attributeSplash_xmlsitemap>
						<type>singleton</type>
						<class>Fishpig_AttributeSplash_Addon_XmlSitemap_Model_Observer</class>
						<method>injectXmlSitemapTabObserver</method>
					</attributeSplash_xmlsitemap>
				</observers>
			</attributesplash_dashboard_tabs_prepare_layout>
		</events>
	</adminhtml>
	<default>
		<attributeSplash>
			<page_xml_sitemap>
				<enabled>1</enabled>
				<frequency>daily</frequency>
				<priority>0.8</priority>
			</page_xml_sitemap>
			<group_xml_sitemap>
				<enabled>1</enabled>
				<frequency>weekly</frequency>
				<priority>0.5</priority>
			</group_xml_sitemap>
			<missing_addon>
				<xmlsitemap>0</xmlsitemap>
			</missing_addon>
		</attributeSplash>
	</default>
</config>